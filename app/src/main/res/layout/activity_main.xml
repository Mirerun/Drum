<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drumback2"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="590dp"
        android:layout_height="327dp"
        app:columnCount="6"
        app:rowCount="2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp">
        //android:layoyt_centerInParent="true"


        <ImageButton
            android:id="@+id/cymbal1"
            android:layout_width="96sp"
            android:layout_height="186sp"
            android:background="#00000000"
            android:onClick="cymbal1"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@drawable/cymbal1" />

        <ImageButton
            android:id="@+id/tom1"
            android:layout_width="89dp"
            android:layout_height="93dp"
            android:background="#00000000"
            android:onClick="tom1"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@drawable/tom1" />

        <ImageButton
            android:id="@+id/tom2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="tom2"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@drawable/tom2" />

        <ImageButton
            android:id="@+id/cymbal2"
            android:layout_width="113sp"
            android:layout_height="110sp"
            android:background="#00000000"
            android:onClick="cymbal2"
            app:layout_column="4"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@drawable/cymbal2" />

        <ImageButton
            android:id="@+id/hihat"
            android:layout_width="112sp"
            android:layout_height="78sp"
            android:background="#00000000"
            android:onClick="hihat"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/hihat" />

        <ImageButton
            android:id="@+id/snare"
            android:layout_width="85sp"
            android:layout_height="79sp"
            android:background="#00000000"
            android:onClick="snare"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="1"
            app:srcCompat="@drawable/snare" />

        <ImageButton
            android:id="@+id/bass"
            android:layout_width="179dp"
            android:layout_height="115dp"
            android:background="#00000000"
            android:onClick="bass"
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_gravity="center"
            app:layout_row="1"
            app:srcCompat="@drawable/bass" />

        <ImageButton
            android:id="@+id/tom3"
            android:layout_width="91dp"
            android:layout_height="120dp"
            android:background="#00000000"
            android:onClick="tom3"
            app:layout_column="4"
            app:layout_gravity="center"
            app:layout_row="1"
            app:srcCompat="@drawable/tom3" />

        <ImageButton
            android:id="@+id/cymbal3"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="#00000000"
            android:onClick="cymbal3"
            app:layout_column="5"
            app:layout_gravity="center"
            app:layout_row="1"
            app:srcCompat="@drawable/cymbal3" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>